{
  "$id": "https://raw.githubusercontent.com/mkaramuk/maker/main/metadata.schema.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Metadata",
  "type": "object",
  "properties": {
    "version": {
      "type": "string",
      "enum": ["1.0"],
      "description": "Version of the metadata"
    },
    "name": {
      "type": "string",
      "description": "Name of template"
    },
    "group": {
      "type": "string",
      "description": "The group that this template belongs to"
    },
    "author": {
      "type": "object",
      "description": "Author details",
      "properties": {
        "name": {
          "type": "string",
          "description": "Name of the author"
        },
        "url": {
          "type": "string",
          "description": "URL of the author"
        }
      },
      "required": ["name"]
    },
    "variables": {
      "type": "object",
      "description": "The variables that can be used for the template",
      "additionalProperties": {
        "type": "object",
        "properties": {
          "type": {
            "type": "string",
            "enum": ["string", "number"],
            "description": "Type of the variable"
          },
          "default": {
            "description": "Default value of the "
          },
          "description": {
            "type": "string",
            "description": "Description of the variable"
          }
        },
        "required": ["type", "description"],
        "allOf": [
          {
            "if": {
              "properties": {
                "type": { "const": "number" }
              }
            },
            "then": {
              "properties": {
                "default": { "type": "number" }
              }
            },
            "else": {
              "properties": {
                "default": { "type": "string" }
              }
            }
          }
        ]
      }
    }
  },
  "required": ["version", "name", "group", "author"]
}
